{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "ES6",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@Components/*": ["./src/components/*"],
			"@pages/*": ["./src/pages/*"]
		}
	},
	"include": ["src", "./declaration.d.ts"]
}
